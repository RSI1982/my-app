node{
  stage('git checkout'){
    git credentialsId: 'GITCredential', url: 'https://github.com/RSI1982/my-app.git'
  }
  stage('build and test'){
    def mvnhome = tool name: 'mavenhome', type: 'maven'
    sh "${mvnhome}/bin/mvn package"
  }
  stage('mail notification'){
    mail bcc: '', body: '''Hi Team,
    This is the build status of your project build''', cc: '', from: '', replyTo: '', subject: 'Buildstatus', to: 'err.rakeshsingh@gmail.com'
  }
}
